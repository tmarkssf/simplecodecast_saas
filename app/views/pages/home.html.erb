<div class="jumbotron text-center">
    <h1>Welcome to Produce Match!</h1>
    <h3>A membership site where you get fresh produce to your home!</h3>
</div>
<div class="row">
    <% if user_signed_in? %>
    <div class="col-md-6">
        <div class="well">
            <h2 class="text-center">Your Profile</h2>
        <% if current_user.profile %>
            <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block'%>
            <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <% else %>
            <%= link_to "Create your profile!", new_user_profile_path(current_user),  class: 'btn btn-default btn-lg btn-block' %>
        <% end %>
        </div>
    </div>
    <div class="col-md-6">
        <div class="well">
            <h2 class="text-center">The Community!</h2>
            <%= link_to 'Visit the community', '#', class: 'btn btn-default btn-lg btn-block' %>
        </div>
    </div>
    <% else %>
    <div class="col-md-6">
        <div class="well">
           <h2 class='text-center'>Basic Membership</h2>
           <h4 class='text-center'>Sign up for free, and get basic access</h4>
           <%= link_to "Sign up for Basic access", new_user_registration_path(plan: @basic_plan.id), class:'btn btn-primary btn-lg btn-block' %>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="well">
          <h2 class='text-center'>Pro Membership</h2>
          <h4 class='text-center'>Sign up for the pro account, and get full access for just $10/month!</h4>
          <%= link_to "Sign up for Pro access", new_user_registration_path(plan: @pro_plan.id), class:'btn btn-success btn-lg btn-block' %>
        </div>
    </div>
    <% end %>
</div>